= form_for(@function) do |f|
  .row
    .col-lg-6
      = text_input(:name, :function, :placeholder => 'A short name for the function')
      = text_area_input(:description, :function, :placeholder => 'Describe how the function should work')

    .col-lg-6
      %fieldset
        %legend Add some unit tests

        .form-group
          = f.label(:tests)
          = f.text_area(:tests, :class => 'editor', :'data-language' => @function.language)

  = submit_tag('Create', :class => 'btn btn-primary')
