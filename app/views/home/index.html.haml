.page-header
  %h1= link_to(rainbowify('Patchwork'), root_path)
  %h2 A function-as-library experiment

- if logged_in?
  .row
    .col-lg-6
      %h2 My Functions
      = render(:partial => 'functions/table')

    .col-lg-6
      %h2 My Implementations
      = render(:partial => 'implementations/table')

- else
  = render(:partial => 'introduction')

  %p!= "#{link_to('Log in', login_path)} or #{link_to('register', register_path)} to continue."
