= form_tag do
  %fieldset
    %legend Register

    .form-group
      = label_tag(:user_name)
      = text_field_tag(:'user[user_name]', nil, :class => 'form-control')

    .form-group
      = label_tag(:real_name)
      = text_field_tag(:'user[real_name]', nil, :class => 'form-control')

    .form-group
      = label_tag(:email)
      = text_field_tag(:'user[email]', nil, :class => 'form-control')

    .form-group
      = label_tag(:password)
      = password_field_tag(:'user[password]', nil, :class => 'form-control')

    .form-group
      = label_tag(:password_confirmation)
      = password_field_tag(:'user[password_confirmation]', nil, :class => 'form-control')

    = submit_tag('Register', :class => 'btn btn-primary')
