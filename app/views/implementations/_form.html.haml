%section.source
  = form_for(@implementation) do |f|
    = f.hidden_field(:patch_id)
    = code_editor(f, :source, @patch.language)

    .actions
      = f.submit
      = empty_link('Run Tests', :class => 'run-tests')

%section.tests
  = form_for(@patch) do |f|
    = code_editor(f, :tests, @patch.language, :'data-extra-gutter' => 'test-results')
