%table(class="#{table_type}-table")
  %thead
    %tr
      - columns.each do |column|
        %th= "#{column}".titleize

  %tbody
    - records.each do |record|
      %tr
        %td= link_to(record.send(columns.first), record)

        - columns[1..-1].each do |column|
          %td= record.send(column)
