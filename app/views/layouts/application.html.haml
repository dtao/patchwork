!!! 5
%html
  %head
    %title Patchwork
    = stylesheet_link_tag("application", :media => "all", "data-turbolinks-track" => true)
    = javascript_include_tag("application", "data-turbolinks-track" => true)
    = yield(:javascripts)
    = csrf_meta_tags

  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .container
        %ul.nav.navbar-nav
          %li= link_to('Patchwork', root_path, :class => 'navbar-brand')
          %li= link_to('Specs', specs_path)
          %li= link_to('Users', users_path)

        %ul.nav.navbar-nav.pull-right
          - if logged_in?
            %li.navbar-text= "Logged in as #{current_user.user_name}."
            %li= link_to('Log out', logout_path)
          - else
            %li= link_to('Log in', login_path)
            %li= link_to('Register', register_path)

    .container
      - if flash[:notice]
        .alert.alert-info= flash[:notice]
      - elsif flash[:error]
        .alert.alert-danger= flash[:error]

      = yield

    = query_diet_widget if Rails.env.development?
